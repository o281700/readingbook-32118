<div class='main-field-wrapper'>
  <% @books.each do |book| %>
    <%= link_to book_path(book.id), class: 'book-anchor' do %>
      <div class='item-wrapper'>
        <%= image_tag '/images/book-image.png', height: '10%', width: '10%' %>
        <div class='book-info'>
          <div class='book-title'>
            <%= book.title %>
            <%= book.author %>
          </div>
          <div class='book-post'>
            <%= book.user.nickname %>
            <%= book.created_at %>
          </div>
        </div>
        <div>
          <%= book.impression%>
        </div>
      </div>
    <% end %>
  <% end %>
</div>